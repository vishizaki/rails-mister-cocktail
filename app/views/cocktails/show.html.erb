<h1><%= @cocktail.name %></h1>


<ul>
<% @cocktail.doses.each do |dose| %>
<li><%= dose.description %> of <%= dose.ingredient.name %></li>
<%= link_to "Delete", cocktail_dose_path(dose), method: :delete %>

<% end %>

</ul>

<br>
<h3>Add a dose</h3>
<%= simple_form_for [@cocktail, @dose ] do |f| %>
  <%= f.input :description %>
  <%= f.association :ingredient %>
  <%= f.button :submit %>
<% end %>

<br><br><br>


<p><%= link_to "Back to list", cocktails_path %></p>
